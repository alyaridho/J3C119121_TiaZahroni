<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/pink_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:backgroundTintMode="screen"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yummy Food Bogor"
            android:textSize="50dp"
            android:fontFamily="cursive"
            android:textColor="@color/black"
            android:textAlignment="center"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Form Login"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:textSize="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/black"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Masukkan Username"
            android:textSize="15dp"
            android:fontFamily="monospace"
            android:id="@+id/etun"
            ></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:textSize="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/black"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Masukkan Password"
            android:textSize="15dp"
            android:fontFamily="monospace"
            android:inputType="textPassword"
            android:id="@+id/etps"
            ></EditText>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:onClick="aksilogin"
            android:background="@drawable/custom1"
            android:textColor="@color/white"
            ></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="INFO"
            android:onClick="infoid"
            android:background="@drawable/custom1"
            ></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Now!"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:onClick="formorder"
            android:id="@+id/tmblorder"
            android:background="@drawable/custom1"
            ></Button>

        <Button
            android:id="@+id/tmbladmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="admin"
            android:text="Masuk sebagai Admin"
            android:background="@drawable/custom1"
            android:visibility="invisible"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
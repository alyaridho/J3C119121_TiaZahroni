<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".winnie">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="660dp"
            android:layout_marginTop="-4dp"
            android:background="@drawable/custom2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/header" ></ImageView>
            <TextView
                android:id="@+id/data_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="275dp"
                android:fontFamily="@font/poppinsblack"
                android:text="Produk"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </RelativeLayout>
        <ImageView
            android:layout_width="370dp"
            android:layout_height="165dp"
            android:layout_marginTop="-650dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/winnie"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppinsblack"
            android:text="UMKM Winnie Cakes"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textAlignment="center"></TextView>
        <RelativeLayout
            android:layout_width="155dp"
            android:layout_height="245dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-18dp"
            android:background="@color/pink2">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/cupcake"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="-75dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="140dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppinsboldnew"
                android:text="Cup Cake"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="160dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppinsboldnew"
                android:text="Rp 150.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="180dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppinsboldnew"
                android:text="Stok : 30"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="155dp"
            android:layout_height="245dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-242dp"
            android:background="@color/pink2">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="-75dp"
                android:src="@drawable/kueultah"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="138dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppinsboldnew"
                android:text="Kue Ultah "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="gravity"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="158dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppinsboldnew"
                android:text="Rp 150.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="178dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppinsboldnew"
                android:text="Stok : 40"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"></TextView>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="15dp"
            android:text="Pesan"
            android:textColor="@color/pink_light"
            android:id="@+id/tmblpesan"
            android:onClick="order"
            ></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:id="@+id/navigasi"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home"
                android:onClick="kliknavigasi"/>

            <TextView
                android:text="Beranda"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_pesan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pesan"
                android:onClick="kliknavigasi"/>

            <TextView
                android:text="Produk"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="3.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/nav_pesanan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pesanan"
                android:onClick="kliknavigasi"/>

            <TextView
                android:text="Pesanan"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="3.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:onClick="kliknavigasi"
                android:src="@drawable/profil"
                />

            <TextView
                android:text="Profile"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
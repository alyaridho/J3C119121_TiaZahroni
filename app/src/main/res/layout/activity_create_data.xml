<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateData"
    android:background="@color/lime_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Data Baru"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:fontFamily="casual"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:id="@+id/nama_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:hint="Masukan Barang"
            android:ems="19"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp">

            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/merk_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:hint="Masukan Varian"
            android:ems="19"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp">

            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/harga_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:hint="Masukkan Harga"
            android:ems="19"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp">

            <requestFocus />
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingTop="10dp">
            <Button
                android:id="@+id/buttom_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:onClick="submitKlik"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="50dp"
                />
            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:onClick="klikBack"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utama"
    android:background="@color/pink_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/nama_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:textSize="20sp"
            android:text="DATABASE BARANG YANIMIE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_app"
            android:orientation="vertical"
            android:layout_marginLeft="110dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Menu Database"
                android:textColor="@color/black"
                android:fontFamily="monospace" />
            <Button
                android:id="@+id/button_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="  Tambah Barang   "
                android:onClick="klikGabung"
                />
            <Button

                android:id="@+id/button_databarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="     Data Barang     "
                android:onClick="klikGabung"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>